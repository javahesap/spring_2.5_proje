<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- JDBC -->
    <bean id="conn" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/yourdb?useSSL=false"/>
        <property name="username" value="root"/>
        <property name="password" value="yourpass"/>
    </bean>

    <!-- DAO -->
    <bean id="userDao" class="com.example.dao.UserDaoImpl">
        <property name="conn" ref="conn"/>
    </bean>

    <!-- Controller -->
    <bean name="/user/*.htm" class="com.example.controller.UserController">
        <property name="userDao" ref="userDao"/>
    </bean>
</beans>

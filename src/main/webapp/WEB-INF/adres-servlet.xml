<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="/adreslistele.html" class="com.example.controller.AdresController">
        <property name="methodNameResolver">
            <bean class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
                <property name="mappings">
                    <props>
                        <prop key="/adreslistele.html">adreslistele</prop>
                        <prop key="/ekleForm.html">ekleForm</prop>
                        <prop key="/kaydet.html">kaydet</prop>
                        <prop key="/duzenleForm.html">duzenleForm</prop>
                        <prop key="/guncelle.html">guncelle</prop>
                        <prop key="/sil.html">sil</prop>
                    </props>
                </property>
            </bean>
        </property>
    </bean>
    
    <bean class="util.BeanListLogger"/>
    
    <bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/adres/" />
		<property name="suffix" value=".jsp" />
	</bean>
    

</beans>

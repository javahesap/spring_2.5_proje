<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- URL Mapping -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/*.htm">geninjectController</prop>
                <prop key="/*.htx">geninjectController</prop>
                <prop key="/*.xml">geninjectController</prop>
                <prop key="/*.json">geninjectController</prop>
                <prop key="/*.txt">geninjectController</prop>
                <prop key="/*.ajax">geninjectController</prop>
                <prop key="/*.do">geninjectController</prop>
            </props>
        </property>
    </bean>

    <!-- Method Name Resolver -->
    <bean id="geninjControllerResolver"
        class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/uruninj.htm">hnduruninj</prop>
                <prop key="/denemeinj.htm">hnddenemeinj</prop>
                <prop key="/usersinj.htm">hndusersinj</prop>
            </props>
        </property>
    </bean>

    <!-- Controller -->
    <bean name="geninjectController" class="com.example.controller.GeninjectController">
        <property name="methodNameResolver" ref="geninjControllerResolver"/>
        <property name="userDao" ref="userDao"/>
    </bean>

    <!-- View Resolver -->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
        <property name="prefix" value="/WEB-INF/views/gen/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
</beans>
